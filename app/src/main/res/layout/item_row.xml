<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="#ddd">

            <net.derohimat.baseapp.ui.view.BaseImageView
                android:id="@+id/image_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/score_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginTop="@dimen/spacing_10"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.0"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginBottom="@dimen/spacing_10"
                android:layout_gravity="end|bottom"/>

            <net.derohimat.baseapp.ui.view.BaseImageView
                android:id="@+id/favorite_row"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginTop="@dimen/spacing_10"
                android:layout_gravity="end|top"/>

        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DARK"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginTop="5dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/date_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17-7-2020"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/gendre_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/spacing_10"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview : "
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/overview_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A missing child causes four families to help each "
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/spacing_10"
                android:layout_marginTop="5dp"
                android:layout_weight="1"/>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>