<resources>

    <!-- ============================================= -->
    <!-- Themes -->
    <!-- ============================================= -->

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/menu_item_color</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/LightGrey</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- ============================================= -->
    <!-- Styles -->
    <!-- ============================================= -->

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/app_text_unimportant</item>
        <item name="android:background">@color/app_window_bglight_color</item>
    </style>

    <style name="AppCompatAlertDialogErrorStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_text_label</item>
        <item name="android:textColorPrimary">@color/material_red</item>
        <item name="android:background">@color/app_window_bglight_color</item>
    </style>

    <style name="ImportantText" parent="@android:style/Widget.TextView">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/app_text_label</item>
        <item name="android:paddingLeft">@dimen/spacing_micro</item>
        <item name="android:paddingRight">@dimen/spacing_micro</item>
        <item name="android:paddingTop">@dimen/spacing_nano</item>
        <item name="android:paddingBottom">@dimen/spacing_nano</item>
    </style>

    <style name="FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_margin">@dimen/spacing_normal</item>
    </style>

    <style name="AppTheme.Icon.Small">
        <item name="android:layout_width">@dimen/spacing_big</item>
        <item name="android:layout_height">@dimen/spacing_big</item>

    </style>

    <style name="AppTheme.Icon.Medium">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_height">84dp</item>
    </style>

    <style name="AppTheme.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AppTheme.Icon.Medium.Scaled" parent="AppTheme.Icon.Medium">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="AppTheme.Icon.Home">
        <item name="android:layout_width">@dimen/spacing_big</item>
        <item name="android:layout_height">@dimen/spacing_big</item>
        <item name="android:padding">@dimen/spacing_micro</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!--Home Tab Indicator-->
    <style name="MainTabIndicatorItem">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_nano_body</item>
        <item name="android:paddingTop">@dimen/spacing_nano</item>
        <item name="android:paddingLeft">@dimen/spacing_normal</item>
        <item name="android:paddingRight">@dimen/spacing_normal</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <!--Register-->
    <style name="SpinnerRegister">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48</item>
        <item name="android:inputType">text</item>
    </style>

    <!--History Tab Indicator-->
    <style name="HistoryTabIndicatorItem">
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small_body</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
         </style>

</resources>
